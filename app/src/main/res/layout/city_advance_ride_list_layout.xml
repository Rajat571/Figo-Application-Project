<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="25dp"
    android:backgroundTint="#FFFFFF"
    android:elevation="@dimen/_15sdp"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="1dp"
    android:id="@+id/advance_ride_cardview"
    android:visibility="visible">


        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6.3"
                android:layout_height="wrap_content"
                android:text="Date"
                android:id="@+id/advance_date"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.7"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/advance_time"
                android:textStyle="bold" />
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="30dp"
                    android:text="From"
                    android:src="@drawable/fromlocation"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/advance_location_from"
                    android:layout_width="0dp"
                    android:layout_weight="7.2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_3sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="30dp"
                    android:text="From"
                    android:src="@drawable/destinationlocation"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/advance_location_to"
                    android:layout_width="0dp"
                    android:layout_weight="7.2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.31"
                    android:layout_height="wrap_content"
                    android:text="FarePrice"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/advance_fare_price"
                    android:layout_width="0dp"
                    android:layout_weight="6.2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/advance_booking_id"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                <ImageView
                    android:id="@+id/stopwatchIV"
                    android:layout_width="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/stopwatch"/>
                </LinearLayout>
       <!--         <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="A D V A N C E->"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    />-->
            </LinearLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>