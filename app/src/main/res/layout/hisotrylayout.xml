<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="left"

    android:layout_width="match_parent"
    android:layout_margin="@dimen/_2sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#1D1E1E"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="0dp"
        android:textFontWeight="1"
        android:layout_height="wrap_content"
        android:id="@+id/history_date"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:padding="@dimen/_5sdp"
        android:text="2.10.2022"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/history_amount"
        android:textSize="@dimen/_14sdp"
        android:gravity="right"
        android:textColor="#0EC115"
        android:text="300"
        android:textStyle="bold"
        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:id="@+id/paymentL1"
                    android:text="Booking Limit"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_detail1"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Mr. XYZ XYZ"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:id="@+id/paymentL2"
                    android:text="Booking Request"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:id="@+id/history_detail2"
                    android:textColor="@color/white"
                    android:text="15minute 6:25pm"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:id="@+id/history_detail3"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/white"
                android:text="10 KM"
                />
        </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_2sdp"

        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center"
        android:src="@drawable/wallet"
        android:id="@+id/sendpayment"
        android:text="Send to "
        />
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>