<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E5FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.figgo.cabs.FiggoPartner.UI.Fragment.CabDetailsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/backgrouund"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/wall"
            android:scaleType="centerCrop"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/choose_user"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_margin="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_layout"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:text="Cab Details"
                android:textColor="#325DCB"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/background_card"
                android:orientation="horizontal"
                android:layout_height="40dp"
                >

             <EditText
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="3dp"
                 android:background="@null"
                 android:layout_height="wrap_content"
                 android:hint="Car Category"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/background_card"
                android:orientation="horizontal"
                android:layout_height="40dp"
                >

                <EditText
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:hint="Car Model"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/background_card"
                android:orientation="horizontal"
                android:layout_height="40dp"
                >

                <EditText
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:hint="Model Year"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:drawableEnd="@drawable/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Registration No."/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:drawableEnd="@drawable/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Insurance Valid till"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:drawableEnd="@drawable/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Taxi Permit Valid till"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/bottom_button_layout"
        android:id="@+id/bottombuttonbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>