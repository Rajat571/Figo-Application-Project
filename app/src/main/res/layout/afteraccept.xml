        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="wrap_content"
                    android:text="Booking ID:"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/booking_customer"
                    android:layout_width="0dp"
                    android:layout_weight="7.2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="wrap_content"
                    android:text="Booking Type"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/booking_type"
                    android:layout_width="0dp"
                    android:layout_weight="7.2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.19"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Pick-up location"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pickup_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6.9"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pickup_location"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.19"
                    android:layout_height="wrap_content"
                    android:text="Drop Location"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/drop_location"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="6.9"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pickup_location"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.9"
                    android:layout_height="wrap_content"
                    android:text="FarePrice"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fare_price"
                    android:layout_width="0dp"
                    android:layout_weight="7.2"
                    android:layout_height="wrap_content"
                    android:text="  200rs"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
        <!--   <androidx.recyclerview.widget.RecyclerView
