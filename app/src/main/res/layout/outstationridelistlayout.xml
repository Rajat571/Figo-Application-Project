<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#D1D7D8"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/outride_cardview"
        android:visibility="visible"
        >


        <LinearLayout
            android:id="@+id/llId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/account" />

                <TextView
                    android:id="@+id/outcustomer_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Date"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/outcustomer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/outcustomer_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="4dp"
                android:background="@color/black_shade"
                android:visibility="visible"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/building_address"
                    />

                <TextView
                    android:id="@+id/outlocation_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup location here "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/point" />
                <TextView
                    android:id="@+id/outlocation_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="drop off location here "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/btnDetailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/accept_tv_background"
                android:gravity="center"
                android:padding="10dp"
                android:text="Show More..."
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/innerLL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Booking Id"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="#54600450"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="40dp"
                        android:text="Final Cost"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/rupee"
                        />

                    <TextView
                        android:id="@+id/fare_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!--
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                >

                                                <ImageView
                                                    android:layout_width="14dp"
                                                    android:layout_height="14dp"
                                                    android:layout_marginTop="3dp"
                                                    android:src="@drawable/rupee"
                                                    />

                                                <TextView
                                                    android:id="@+id/costId"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="2000"
                                                    android:textSize="14sp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>
                    -->

                </LinearLayout>
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center"
                    android:background="@color/black_shade"
                    android:visibility="visible"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textAlignment="center"
                        android:text="Distance"
                        android:textStyle="bold"/>
                    <!-- <Space
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight=".5"/>-->

                    <TextView
                        android:id="@+id/total_distence"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="500.24"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Km"
                        android:textStyle="bold"/>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/card_background"
                        android:padding="8dp"
                        android:id="@+id/accept_city_ride_btn"
                        android:text="ACCEPT"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:visibility="visible"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/outstation_progressbar"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        />



                </RelativeLayout>


                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/accept_tv_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Show Less ↑"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>