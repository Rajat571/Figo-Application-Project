<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Working Area"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@color/light_grey"
                android:padding="10dp">

                <!--                 <EditText-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:background="@null"-->
                <!--                android:hint="Outstation/Local/Both"-->
                <!--                />-->
                <Spinner
                    android:id="@+id/show_working_area_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Working Area" />
            </LinearLayout>


            <!--            working state layout-->


            <!--            local working area layout-->
            <LinearLayout
                android:id="@+id/show_working_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">


                    <Spinner
                        android:id="@+id/show_select_state1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">


                    <Spinner
                        android:id="@+id/show_select_state2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/show_select_state3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">


                    <Spinner
                        android:id="@+id/show_select_state4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">


                    <Spinner
                        android:id="@+id/show_select_state5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/show_working_local_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/show_select_state_local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working State" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/light_grey"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/show_select_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Working City" />
                </LinearLayout>
            </LinearLayout>



            <Button
                android:id="@+id/updateworkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:text="Update"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>