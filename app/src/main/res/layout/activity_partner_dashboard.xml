<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.figgo.cabs.FiggoPartner.UI.Partner_Dashboard">

   <include
       android:id="@+id/layout"
       layout="@layout/layoutpartnerdashboard"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <fragment
       android:id="@+id/mainContainer"
       android:name="androidx.navigation.fragment.NavHostFragment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:defaultNavHost="true"
       app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/layout"
       app:navGraph="@navigation/partner_nav_graph"
       tools:ignore="MissingConstraints" />

   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/navigation_bar"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:background="@color/black"
       android:padding="5dp"
       android:textAlignment="center"
       app:itemIconTint="@color/white"
       app:itemRippleColor="@color/purple_200"
       app:itemTextColor="@drawable/bottom_nav_title_color"
       app:labelVisibilityMode="labeled"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:menu="@menu/partner_dashboard_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
