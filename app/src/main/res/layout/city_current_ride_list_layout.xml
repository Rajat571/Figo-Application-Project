    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
